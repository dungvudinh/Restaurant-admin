<script >
  const ctx = $('#myChart');
  const ctx2 = $('#myChart2');
  const ctx3 = $('#myChart3');
  const ctx4 = $('#myChart4');
  const ctx5 = $('#myChart5');
  var totalMoney = {{totalMoney}};
  if(totalMoney)
  {
   

    ctx2.removeClass('d-none');
    ctx2.addClass('d-block');

    ctx4.removeClass('d-none');
    ctx4.addClass('d-block');

    ctx5.removeClass('d-none');
    ctx5.addClass('d-block');
  }
  
  function moneyFormatter(money)
  {
    if(money > 999&& money < 1000000)
        return (money/1000).toFixed(0) + 'K'; // Chuyển thành M nếu giá trị từ 1000 đến dưới 1 triệu
    else if(money > 1000000)
        return (money/1000000).toFixed(0) + 'M'; // Chuyển thành M nếu giá trị lớn hơn 1 triệu
    else if(money < 900)
        return money; // Trả về đơn vị mặc định nếu giá trị dưới 1000
    
  }
  const yesterdayDate = new Date().getDate() -1;
  
  function dayFormatter(number)
  {
    if(number == 0) return "Thứ 2";
    else if(number == 1) return "Thứ 3"
    else if(number == 2) return "Thứ 4"
    else if(number == 3) return "Thứ 5"
    else if(number == 4) return "Thứ 6"
    else if(number == 5) return "Thứ 7"
    else if(number == 6) return "Chủ nhật"
  }
  new Chart(ctx3, {
    type: 'bar',
    data: {
      labels: [yesterdayDate],
      datasets: [{
        label: '# of Votes',
        data: [12, 19, 3, 5, 2, 3],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
      datasets: [{
        label: '# of Votes',
        data: [12, 19, 3, 5, 2, 3],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

// DOANH SỐ HÔM NAY\
  //INIT CHART
  //THEO NGÀY
 
  var chart2 = new Chart(ctx2, {
    type: 'bar',
    data: {
      labels: [new Date().getDate()],
      datasets: [{
        label: 'Doanh thu',
        data: [{{totalMoney}}],
        borderWidth: 1, 
        barThickness: 80 
      }]
    },
    options: {
      
      scales: {
        y: {
          beginAtZero: true
        }
        
      }
    }
  });

  //THEO THỨ
  var chart5 = new Chart(ctx5, {
    type: 'bar',
    data: {
      labels: [dayFormatter( new Date().getDay() -1)],
      datasets: [{
        label: 'Doanh thu',
        data: [{{totalMoneyYesterday}}],
        borderWidth: 1, 
        barThickness: 80 
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
  //THEO GIỜ
    var dataByHourYesterday = {{{totalMoneyByHourYesterday}}};
    var dataByHourToday  = {{{totalMoneyByHourToday}}}
    var chart4 = new Chart(ctx4, {
    type: 'bar',
    data: {
      labels:dataByHourToday.map(data=>data.hour + ":00"),
      datasets: [{
        label:'Doanh thu', 
        data:  dataByHourToday.map(data=>data.total),
        borderWidth: 1, 
        barPercentage: 0.5, 
        barThickness:30, 
        minBarLength: 2
       
      }]
    }, 
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

  $("#revenue-select").on('change', function(){
    $("#revenue-select option:selected").each(function(){
      if($(this).val() == 'today')
      {
        $('.revenue-title').text("Doanh số hôm nay")
        if(totalMoney)
        {
          chart2.data.labels = [];
          chart2.data.datasets.forEach((dataset) => {
              dataset.data = [];
          });
          chart2.data.labels.push(new Date().getDate());
          chart2.data.datasets.forEach(dataset=>{
            dataset.data.push({{totalMoney}});
          })
          chart2.update();
        }
        else 
        {
            ctx2.addClass('d-none');
            ctx2.removeClass('d-block');
        }
        
      }
      else if($(this).val() == 'yesterday')
      {
        $('.revenue-title').text("Doanh số hôm qua")
        chart2.data.labels.pop();
        chart2.data.datasets.forEach((dataset) => {
            dataset.data.pop();
        });
        chart2.data.labels.push("TODAY");
        chart2.data.datasets.forEach(dataset=>{
          dataset.data.push({{totalMoneyYesterday}});
        })
        chart2.update();
      }
      else if($(this).val() == '7')
      {
        $('.revenue-title').text("Doanh số 7 ngày qua")
        var totalMoneyByDay7Day = {{{totalMoneyByDay7Day}}};
        var totalMoneyByHour7Day  = {{{totalMoneyByHour7Day}}};
        console.log(totalMoneyByDay7Day);
        if(totalMoneyByDay7Day || totalMoneyByHour7Day)
        {
            ctx2.removeClass('d-none');
            ctx2.addClass('d-block');
            //DOANH SỐ THEO NGÀY
            chart2.data.labels = [];
            chart2.data.datasets.forEach((dataset) => {
                dataset.data.pop();
            });
            totalMoneyByDay7Day.forEach(obj=>{
              chart2.data.labels.push(obj.date);
            })
            chart2.data.datasets.forEach(dataset=>{
              dataset.data = totalMoneyByDay7Day.map((data)=>data.total)
            })
            chart2.update();
            //DOANH SỐ THEO GIỜ
              chart4.data.labels = [];
              chart4.data.datasets.forEach((dataset) => {
                dataset.data.pop();
              });
              totalMoneyByHour7Day.forEach(obj=>{
                chart4.data.labels.push(obj.hour);
              })
              chart4.data.datasets.forEach(dataset=>{
                dataset.data = totalMoneyByHour7Day.map((data)=>data.total)
              })
              chart4.update();
              //DOANH SỐ THEO THỨ
              chart5.data.labels = [];
              chart5.data.datasets.forEach((dataset) => {
                dataset.data.pop();
              });
              totalMoneyByDay7Day.forEach(obj=>{
                chart5.data.labels.push(obj.date);
              })
              chart5.data.datasets.forEach(dataset=>{
                dataset.data = totalMoneyByDay7Day.map((data)=>data.total)
              })
        }
        else 
        {
            ctx2.addClass('d-none');
            ctx2.removeClass('d-block');
        }
        
      }
    })
  })
</script>