<script >
  var revenueByDateCtx = $('#revenue-by-date-chart');
  var revenueByHourCtx = $('#revenue-by-hour-chart');
  var revenueByDayCtx = $('#revenue-by-day-chart');
  var clientQuantityCtx = $('#client-quantity-chart');
  var topMenuCtx = $('#top-menu-chart');

  var totalMoneyToday = {{totalMoneyToday}};
  var totalMoneyByHourToday  = {{{totalMoneyByHourToday}}}

  var totalMoneyYesterday  = {{totalMoneyYesterday}}
  var totalMoneyByHourYesterday = {{{totalMoneyByHourYesterday}}};

  var totalMoney7Day = {{{totalMoney7Day}}};
  var totalMoneyByHour7Day  = {{{totalMoneyByHour7Day}}};

  var clientQuantityToday = {{{clientQuantityToday}}}
  var clientQuantityYesterday = {{{clientQuantityYesterday}}}
  var clientQuantity7Day = {{{clientQuantity7Day}}}

  var top10MenuToday = {{{top10MenuToday}}}
  var top10MenuYesterday = {{{top10MenuYesterday}}}
  var top10Menu7Day = {{{top10Menu7Day}}}

  var timeActiveInit = ()=>{
    var arrInit = [];
    for(var i = 8; i<=20; i ++)
    {
      arrInit.push(i);
    }
    return arrInit;
  }

  function moneyFormatter(money)
  {
    if(money > 999&& money < 1000000)
        return (money/1000).toFixed(0) + 'K'; // Chuyển thành M nếu giá trị từ 1000 đến dưới 1 triệu
    else if(money > 1000000)
        return (money/1000000).toFixed(0) + 'M'; // Chuyển thành M nếu giá trị lớn hơn 1 triệu
    else if(money < 900)
        return money; // Trả về đơn vị mặc định nếu giá trị dưới 1000
    
  }

  function dayFormatter(number)
  {
    if(number == 0) return "Chủ nhật";
    else if(number == 1) return "Thứ 2"
    else if(number == 2) return "Thứ 3"
    else if(number == 3) return "Thứ 4"
    else if(number == 4) return "Thứ 5"
    else if(number == 5) return "Thứ 6"
    else if(number == 6) return "Thứ 7"
  }
  function getYesterday(date)
  {
    date.setDate(date.getDate()-1);
    return new Intl.DateTimeFormat("vi-VN").format(date);
  }
  
  const setDataIntoLabelChart = (arr)=>
  {
    return timeActiveInit().reduce((init, item)=>
    {
      var data = 0;
        arr.forEach(client=>
        {
          if(client.hour == item)
            data = client.quantity;
        })
      return [...init, data];
    }, [])
  }
  
  
// #region TOP 10 MÓN ĂN BÁN CHẠY HÔM NAY 
  if(top10MenuToday.length > 0)
  {
    topMenuCtx.removeClass('d-none');
    topMenuCtx.addClass('d-block');
  }
  //INIT 
  var topMenuChart = new Chart(topMenuCtx, {
    type: 'bar',
    data: {
      labels: top10MenuToday.map((menu=>menu.name)),
      datasets: [{label:'Số lượng', data: top10MenuToday.map((menu=>menu.total_quantity)) ,borderWidth: 1, barThickness: 80 }]
    },
    options: {
      scales: {y: {beginAtZero: true} }
    }
  });
//#endregion
//#region SỐ LƯỢNG KHÁCH HÔM NAY
  if(clientQuantityToday.length > 0)
  {
    clientQuantityCtx.removeClass('d-none');
    clientQuantityCtx.addClass('d-block');
  }
  //INIT 
  
 

  var clientQuantityChart = new Chart(clientQuantityCtx, {
    type: 'line',
    data: {
      labels: timeActiveInit().map(item=>item + ":00"),
      datasets: [{label: 'Số lượng khách',data: clientQuantityToday.map(client=>client.quantity),borderWidth: 1, tension:0.4}],
    },
    options: {
      scales: {y: {beginAtZero: true} }
    }
  });
//#endregion
//#region DOANH SỐ HÔM NAY
if(totalMoneyToday)
{
  
  revenueByDateCtx.removeClass('d-none');
  revenueByDateCtx.addClass('d-block');

  revenueByHourCtx.removeClass('d-none');
  revenueByHourCtx.addClass('d-block');

  revenueByDayCtx.removeClass('d-none');
  revenueByDayCtx.addClass('d-block');
}
  //INIT CHART
  //THEO NGÀY
 
  var revenueByDateChart = new Chart(revenueByDateCtx, {
    type: 'bar',
    data: {
      labels: [new Date().getDate() + "/" +(new Date().getMonth()+ 1) + "/"  + new Date().getFullYear()],
      datasets: [{label: 'Doanh thu',data: [totalMoneyToday],borderWidth: 1, barThickness: 80 }]
    },
    options: {
      scales: {y: {beginAtZero: true} } 
    }
  });
  //THEO THỨ
  var revenueByDayChart = new Chart(revenueByDayCtx, {
    type: 'bar',
    data: {
      labels: [dayFormatter(new Date().getDay())],
      datasets: [{label: 'Doanh thu',data: [totalMoneyToday],borderWidth: 1, barThickness: 80 }]
    },
    options: {
      scales: {y: { beginAtZero: true} }
    }
  });
  //THEO GIỜ
    
    var revenueByHourChart = new Chart(revenueByHourCtx, {
    type: 'bar',
    data: {
      labels:totalMoneyByHourToday.map(data=>data.hour + ":00"),
      datasets: [{label:'Doanh thu', data:  totalMoneyByHourToday.map(data=>data.total), borderWidth: 1, barPercentage: 0.5,barThickness:30,minBarLength: 2}]
    }, 
    options: {
      scales: {y: {beginAtZero: true} }
    }
  });
//#endregion
  //HANDLE SELECT REVENUE
  $("#revenue-select").on('change', function(){
    $("#revenue-select option:selected").each(function(){
      
      //REVENUE TODAY
      if($(this).val() == 'today')
      {
        $('.revenue-title').text("Doanh số hôm nay"); 
        if(totalMoneyToday)
        {
            revenueByDateCtx.removeClass('d-none');
            revenueByDateCtx.addClass('d-block');

            revenueByHourCtx.removeClass('d-none');
            revenueByHourCtx.addClass('d-block');

            revenueByDayCtx.removeClass('d-none');
            revenueByDayCtx.addClass('d-block');
            //THEO NGÀY
            revenueByDateChart.data.labels = [];
            revenueByDateChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
            revenueByDateChart.data.labels.push(new Date().getDate() + "/" + (new Date().getMonth() +1) + "/" + new Date().getFullYear());
            revenueByDateChart.data.datasets.forEach(dataset=>{
              dataset.data.push(totalMoneyToday);
            })
            revenueByDateChart.update();
            //THEO GIỜ 
            revenueByHourChart.data.labels = [];
            revenueByHourChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
          
            totalMoneyByHourToday.forEach(obj=>{
                revenueByHourChart.data.labels.push(obj.hour + ":00");
            })
            revenueByHourChart.data.datasets.forEach(dataset=>{
              dataset.data = totalMoneyByHourToday.map((data)=>data.total)
            })
            revenueByHourChart.update()
            //THEO THỨ
            revenueByDayChart.data.labels = [];
            revenueByDayChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
            revenueByDayChart.data.labels.push(dayFormatter(new Date().getDay()));
            revenueByDayChart.data.datasets.forEach(dataset=>{
              dataset.data.push(totalMoneyToday);
            })
            revenueByDayChart.update();
        }
        else 
        {
            revenueByDateCtx.addClass('d-none');
            revenueByDateCtx.removeClass('d-block');

            revenueByHourCtx.addClass('d-none');
            revenueByHourCtx.removeClass('d-block');

            revenueByDayCtx.addClass('d-none');
            revenueByDayCtx.removeClass('d-block');
        }
        
      }
      //REVENUE YESTERDAY
      else if($(this).val() == 'yesterday')
      {
        $('.revenue-title').text("Doanh số hôm qua")
        if(totalMoneyYesterday)
        {
          //THEO NGÀY
            revenueByDateCtx.removeClass('d-none');
            revenueByDateCtx.addClass('d-block');

            revenueByHourCtx.removeClass('d-none');
            revenueByHourCtx.addClass('d-block');

            revenueByDayCtx.removeClass('d-none');
            revenueByDayCtx.addClass('d-block');
            
            revenueByDateChart.data.labels = [];
            revenueByDateChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
            revenueByDateChart.data.labels.push(getYesterday(new Date()));
            revenueByDateChart.data.datasets.forEach(dataset=>{
              dataset.data.push(totalMoneyYesterday);
            })
            revenueByDateChart.update();
          //THEO GIỜ 
            revenueByHourChart.data.labels = [];
            revenueByHourChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
          
            totalMoneyByHourYesterday.forEach(obj=>{
                revenueByHourChart.data.labels.push(obj.hour + ":00");
            })
            revenueByHourChart.data.datasets.forEach(dataset=>{
              dataset.data = totalMoneyByHourYesterday.map((data)=>data.total)
            })
            revenueByHourChart.update()
            //THEO THỨ
            revenueByDayChart.data.labels = [];
            revenueByDayChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
            revenueByDayChart.data.labels.push(dayFormatter((new Date().getDay() -1) >=0 ? (new Date().getDay() -1) : 6));
            revenueByDayChart.data.datasets.forEach(dataset=>{
              dataset.data.push(totalMoneyYesterday);
            })
            revenueByDayChart.update();
        }
        else 
        {
            revenueByDateCtx.addClass('d-none');
            revenueByDateCtx.removeClass('d-block');

            revenueByHourCtx.removeClass('d-none');
            revenueByHourCtx.addClass('d-block');

            revenueByDayCtx.removeClass('d-none');
            revenueByDayCtx.addClass('d-block');
        }
      }
      //REVENUE 7 DAYS
      else if($(this).val() == '7')
      {
        $('.revenue-title').text("Doanh số 7 ngày qua")
        
        if(totalMoney7Day)
        {
            revenueByDateCtx.removeClass('d-none');
            revenueByDateCtx.addClass('d-block');

            revenueByHourCtx.removeClass('d-none');
            revenueByHourCtx.addClass('d-block');

            revenueByDayCtx.removeClass('d-none');
            revenueByDayCtx.addClass('d-block');

            //DOANH SỐ THEO NGÀY
            revenueByDateChart.data.labels = [];
            revenueByDateChart.data.datasets.forEach((dataset) => {
                dataset.data.pop();
            });
            totalMoney7Day.forEach(obj=>{
              revenueByDateChart.data.labels.push(new Date(obj.date).getDate()+ "/" + (new Date(obj.date).getMonth() +1)  + '/' + new Date(obj.date).getFullYear()) ;
            })
            revenueByDateChart.data.datasets.forEach(dataset=>{
              dataset.data = totalMoney7Day.map((data)=>data.total)
            })
            revenueByDateChart.update();
            //DOANH SỐ THEO GIỜ
            
              revenueByHourChart.data.labels = [];
              revenueByHourChart.data.datasets.forEach((dataset) => {
                dataset.data.pop();
              });
              totalMoneyByHour7Day.forEach(obj=>{
                revenueByHourChart.data.labels.push(obj.hour + ":00");
              })
              revenueByHourChart.data.datasets.forEach(dataset=>{
                dataset.data = totalMoneyByHour7Day.map((data)=>data.total)
              })
              revenueByHourChart.update();
              //DOANH SỐ THEO THỨ
             
              revenueByDayChart.data.labels = [];
              revenueByDayChart.data.datasets.forEach((dataset) => {
                dataset.data.pop();
              });
              totalMoney7Day.forEach(obj=>{
                revenueByDayChart.data.labels.push(dayFormatter(new Date(obj.date).getDay()));
              })
              revenueByDayChart.data.datasets.forEach(dataset=>{
                dataset.data = totalMoney7Day.map((data)=>data.total)
              })
              revenueByDayChart.update();
        }
        else 
        {
            revenueByDateCtx.addClass('d-none');
            revenueByDateCtx.removeClass('d-block');

            revenueByHourCtx.addClass('d-none');
            revenueByHourCtx.removeClass('d-block');

            revenueByDayCtx.addClass('d-none');
            revenueByDayCtx.removeClass('d-block');
        }
        
      }
    })
  })
  //HANDLE SELECT CLIENT QUANTITY 
  $('#client_quantity-select').on('change', function(){
    $('#client_quantity-select option:selected').each(function(){
      if($(this).val() == 'today')
      {
        $('#client_quantity-title').text("Số lượng khách hôm nay")
        if(clientQuantityToday)
        {
          clientQuantityCtx.removeClass('d-none');
          clientQuantityCtx.addClass('d-block');

          clientQuantityChart.data.datasets.forEach((dataset) => {
              dataset.data = [];
          });
          
          clientQuantityChart.data.datasets.forEach(dataset=>{
            dataset.data.push = clientQuantityToday.map(client=>client.quantity);
          })
          clientQuantityChart.update();
        }
        else 
        {
          clientQuantityCtx.removeClass('d-block');
          clientQuantityCtx.addClass('d-none');
        }
      }
      else if($(this).val() == 'yesterday')
      {
        $('#client_quantity-title').text("Số lượng khách hôm qua")
        if(clientQuantityYesterday)
        {
          
          clientQuantityCtx.removeClass('d-none');
          clientQuantityCtx.addClass('d-block');

          clientQuantityChart.data.datasets.forEach((dataset) => {
              dataset.data = [];
          });
          
          clientQuantityChart.data.datasets.forEach(dataset=>{
            dataset.data= setDataIntoLabelChart(clientQuantityYesterday)
          })
          clientQuantityChart.update();
        }
        else 
        {
          clientQuantityCtx.removeClass('d-block');
          clientQuantityCtx.addClass('d-none');
        }
      }
      else if($(this).val() == '7')
      {
        $('#client_quantity-title').text("Số lượng khách 7 ngày qua")
        if(clientQuantity7Day)
        {
          clientQuantityCtx.removeClass('d-none');
          clientQuantityCtx.addClass('d-block');

          clientQuantityChart.data.datasets.forEach((dataset) => {
              dataset.data = [];
          });
          
          clientQuantityChart.data.datasets.forEach(dataset=>{
            dataset.data= setDataIntoLabelChart(clientQuantity7Day)
          })
          clientQuantityChart.update();

        }
        else 
        {
          clientQuantityCtx.removeClass('d-block');
          clientQuantityCtx.addClass('d-none');
        }
      }
    })
  })
  $('#top_menu-select').on('change', function(){
    $('#top_menu-select option:selected').each(function(){
      if($(this).val() == 'today')
      {
        $("#top_menu-title").text("Top 10 món ăn bán chạy hôm nay")
        if(top10MenuToday.length > 0)
        {
            topMenuCtx.removeClass('d-none');
            topMenuCtx.addClass('d-block');

            topMenuChart.data.labels = [];
            topMenuChart.data.datasets.forEach((dataset) => {
                dataset.data = [];
            });
            top10MenuToday.forEach(menu=>{
              topMenuChart.data.labels.push(menu.name);
            })
            topMenuChart.data.datasets.forEach(dataset=>{
              dataset.data = top10MenuToday.map(menu=>menu.total_quantity)
            })
            topMenuChart.update();

        }
        else 
        {
            topMenuCtx.addClass('d-none');
            topMenuCtx.removeClass('d-block');
        }

      }
